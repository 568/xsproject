<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_launcher"
    android:orientation="vertical"
    tools:context="com.sid.soundrecorderutils.MainActivity">

    <Button
        android:id="@+id/main_btn_record_sound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/start_icon"
        android:text="" />

    <Button
        android:id="@+id/main_btn_stop_record_sound"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="停止录音"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/record_audio_text_time"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="正在录音"
        android:textColor="@color/primary_text" />

    <Button
        android:id="@+id/main_btn_play_sound"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="上传录音"
        android:visibility="gone" />

    <Button
        android:id="@+id/main_btn_stop_service"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="停止上传录音"
        android:visibility="gone" />

    <Button
        android:id="@+id/gobackbtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        android:visibility="visible" />
</RelativeLayout>
